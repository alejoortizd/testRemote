<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="class-header">
      <h3>New Contact</h3>
    </div>
    <div class="card-body">
      <form action="/contacts/new" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <span><strong>first Name</strong></span>
          <input type="text" name="firstName" class="form-control" placeholder="Name" autofocus required>
        </div>
        <div class="form-group">
          <span><strong>last Name</strong></span>
          <input type="text" name="lastName" class="form-control" placeholder="Last Name" autofocus required>
        </div>
        <div class="form-group">
          <span><strong>email</strong></span>
          <input type="email" name="email" class="form-control" placeholder="email" required>
        </div>
        <div class="form-group">
          <span><strong>phone Number</strong></span>
          <input type="text" name="phoneNumber" class="form-control" placeholder="phone" autofocus required>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
