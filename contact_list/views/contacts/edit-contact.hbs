<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Contact</h3>
    </div>
    <div class="card-body">
      <form action="/contacts/edit/{{contact._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <span><strong>First Name</strong></span>
          <input type="text" name="firstName" class="form-control" value="{{contact.firstName}}" required>
        </div>
        <div class="form-group">
          <span><strong>Last Name</strong></span>
          <input type="text" name="lastName" class="form-control" value="{{contact.lastName}}" required>
        </div>
        <div class="form-group">
          <span><strong>Email</strong></span>
          <input type="email" name="price" class="form-control" value="{{contact.email}}" required>
        </div>
        <div class="form-group">
          <span><strong>Phone Number</strong></span>
          <input type="text" name="adress" class="form-control" value="{{contact.phoneNumber}}" required>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
